+                      {isCreator ? (
+                        booking.brand && (
+                          <Avatar
+                            src={booking.brand.logo}
+                            alt={booking.brand.company_name || 'Brand'}
+                            size="lg"
+                            type="brand"
+                          />
+                        )
+                      ) : (
+                        booking.creator && (
+                          <Avatar
+                            src={booking.creator.profile_picture}
+                            alt={booking.creator.username || 'Creator'}
+                            size="lg"
+                            type="user"
+                          />
+                        )
+                      )}
 
                       {/* Details */}
                       <div className="flex-1">
