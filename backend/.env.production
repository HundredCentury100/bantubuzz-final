# BantuBuzz Backend Production Environment
# Copy this to .env and update values

FLASK_ENV=production
SECRET_KEY=change-this-to-a-secure-random-string
JWT_SECRET_KEY=change-this-to-another-secure-random-string

# Database - PostgreSQL
DATABASE_URL=postgresql://bantubuzz_user:your-secure-password@localhost:5432/bantubuzz

# Redis
REDIS_URL=redis://localhost:6379/0

# Paynow Payment Gateway - UPDATE THESE
PAYNOW_INTEGRATION_ID=your-paynow-integration-id
PAYNOW_INTEGRATION_KEY=your-paynow-integration-key
PAYNOW_RETURN_URL=http://YOUR_SERVER_IP:8080/payment/return
PAYNOW_RESULT_URL=http://YOUR_SERVER_IP:8002/api/payment/webhook

# Frontend URL (for CORS and emails)
FRONTEND_URL=http://YOUR_SERVER_IP:8080

# Email Configuration - UPDATE THESE
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password
MAIL_DEFAULT_SENDER=noreply@bantubuzz.com

# File Upload
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
